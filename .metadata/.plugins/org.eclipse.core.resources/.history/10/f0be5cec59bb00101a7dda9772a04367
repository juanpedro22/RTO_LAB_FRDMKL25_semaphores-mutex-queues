/* ** Definição real da variável global **
** (Isto é o que 'extern' estava procurando)
*/
#if defined(USE_MUTEX_IMPLEMENTATION)
  mutex_t g_led_mutex;
#else
  semaphore_t g_led_semaphore;
#endif

/*lint -save  -e970 Disable MISRA rule (6.3) checking. */
int main(void)
/*lint -restore Enable MISRA rule (6.3) checking. */
{
  /* Write your local variable definition here */

  /*** Processor Expert internal initialization. DON'T REMOVE THIS CODE!!! ***/
  PE_low_level_init();
  /*** End of Processor Expert internal initialization.                    ***/

  /* Write your code here */
  /* For example: for(;;) { } */

  /*** Don't write any code pass this line, or it will be deleted during code generation. ***/
  osa_status_t status;
  #if defined(USE_MUTEX_IMPLEMENTATION)
    status = OSA_MutexCreate(&g_led_mutex);
  #else
    status = OSA_SemaCreate(&g_led_semaphore, 1);
  #endif

    if (status != kStatus_OSA_Success)
    {
        /* Se falhar aqui (Falta de Heap!), vamos travar. */
        /* Você pode ligar um LED de erro aqui se quiser. */
        while(1);
    }
    /* ** ======================================================= ** */


    /* Agora inicia o RTOS.
    ** As tarefas agora podem rodar com segurança,
    ** pois o mutex JÁ EXISTE.
    */
    (void)OSA_Start();
  /*** RTOS startup code. Macro PEX_RTOS_START is defined by the RTOS component. DON'T MODIFY THIS CODE!!! ***/
  #ifdef PEX_RTOS_START
    PEX_RTOS_START();                  /* Startup of the selected RTOS. Macro is defined by the RTOS component. */
  #endif
  /*** End of RTOS startup code.  ***/
  /*** Processor Expert end of main routine. DON'T MODIFY THIS CODE!!! ***/
  for(;;){}
  /*** Processor Expert end of main routine. DON'T WRITE CODE BELOW!!! ***/
} /*** End of main routine. DO NOT MODIFY THIS TEXT!!! ***/

